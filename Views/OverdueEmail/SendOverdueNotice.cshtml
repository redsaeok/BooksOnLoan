@model BooksOnLoan.Models.Email

@{
    ViewData["Title"] = "Send Overdue Notice";
    var transactionID = (int) ViewData["TransactionId"]!;
    var recipient = ViewData["Recipient"] as String;
    var sender = ViewData["Sender"] as String;
    var subject = ViewData["Subject"] as String;
    var body = ViewData["Body"] as String;
}
<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Transaction" asp-action="index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="From" class="control-label"></label>
                <input asp-for="From" value='@sender' class="form-control" />
                <span asp-validation-for="From" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="To" class="control-label"></label>
                <input asp-for="To" value='@recipient' class="form-control" />
                <span asp-validation-for="To" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject" class="control-label"></label>
                <input asp-for="Subject" value='@subject' class="form-control" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Body" class="control-label"></label> <br>                               
                <textarea class="form-control" asp-for="Body" rows="5" rows="3"></textarea>
                <span asp-validation-for="Body" class="text-danger">@body</span>
            </div>

            <div class="form-group">
                <input type="submit" value="Deliver" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
